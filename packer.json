{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "vault_secret": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-2d39803a",
    "instance_type": "t2.medium",
    "ssh_username": "ubuntu",
    "ami_name": "catalog-ami {{timestamp}}"
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 20",
        "sudo apt-add-repository -y ppa:ansible/ansible",
        "sudo apt-get -y update",
        "sudo apt-get -y install ansible",
        "echo {{user `vault_secret`}} > /tmp/vault_secret.txt"
    ]},

    {
        "type": "ansible-local",
        "playbook_dir": "ansible",
        "inventory_file": "ansible/packer-host",
        "staging_directory": "/tmp/ansible-local",
        "playbook_file": "ansible/site.yml",
        "extra_arguments": [
          "--vault-password-file=/tmp/vault_secret.txt"
        ]
  }]
}
