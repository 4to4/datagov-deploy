{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "ansible_vault_password": null
  },

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-2d39803a",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "catalog-frontend {{isotime \"2006-01-02T03-04-05\"}}"
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 20",
        "sudo apt-add-repository -y ppa:ansible/ansible",
        "sudo apt-get -y update",
        "sudo apt-get -y install ansible",
        "echo {{user `ansible_vault_password`}} > /tmp/ansible_vault_password.txt"
    ]},

    {
        "type": "ansible-local",
        "playbook_dir": "ansible",
        "inventory_file": "ansible/hosts",
        "staging_directory": "/tmp/ansible-local",
        "playbook_file": "ansible/catalog.yml",
        "extra_arguments": [
          "--limit=packer",
          "--tags 'frontend,ec2'",
          "--skip-tags 'solr,db,cron,saml2'",
          "--vault-password-file=/tmp/ansible_vault_password.txt"
        ]
  }]
}
