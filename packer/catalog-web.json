{
  "variables": {
    "source_ami": "ami-a5a98fde",
    "instance_type": "m3.medium",
    "ami_name": "catalog-web-ami {{isotime \"2006-01-02T03-04-05\"}}"
  },

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `ami_name`}}"
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo {{user `ansible_vault_password`}} > /tmp/ansible_vault_password.txt"
    ]},

    {
        "type": "ansible-local",
        "playbook_dir": "ansible",
        "playbook_file": "ansible/catalog.yml",
        "extra_arguments": [
          "--tags 'frontend,ec2'",
          "--skip-tags 'solr,db,cron,saml2,trendmicro,fluentd'",
          "--vault-password-file=/tmp/ansible_vault_password.txt"
        ]
  }]
}
